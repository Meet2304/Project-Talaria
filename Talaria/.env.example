# Firebase Configuration
# Get these values from your Firebase project settings (https://console.firebase.google.com/)
# These are PUBLIC keys and will be exposed in the browser
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your_project_id-default-rtdb.firebaseio.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Google Cloud / Vertex AI Configuration
# Get these from Google Cloud Console (https://console.cloud.google.com/)
# IMPORTANT: These are SERVER-SIDE only - never expose in client code
GOOGLE_CLOUD_PROJECT_ID=your_gcp_project_id
GOOGLE_CLOUD_LOCATION=us-central1
VERTEX_AI_ENDPOINT_ID=your_endpoint_id
VERTEX_AI_API_ENDPOINT=https://aiplatform.googleapis.com

# Google Cloud Authentication
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# REQUIRED: Choose ONE of the following authentication methods:
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Option 1: Service Account JSON (RECOMMENDED for Windows / No gcloud)
# ----------------------------------------------------------------------
# 1. Go to: https://console.cloud.google.com/iam-admin/serviceaccounts
# 2. Create or select service account with "Vertex AI User" role
# 3. Create JSON key and download it
# 4. Copy the ENTIRE JSON content (all on one line)
# 5. Paste below, wrapped in single quotes
# 6. See QUICK_AUTH_FIX.md for detailed instructions
#
# Format: GOOGLE_SERVICE_ACCOUNT_KEY_JSON='{"type":"service_account",...}'
# GOOGLE_SERVICE_ACCOUNT_KEY_JSON='{"type":"service_account","project_id":"your_project_id","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"...@...iam.gserviceaccount.com",...}'

# Option 2: Application Default Credentials (if you have gcloud CLI)
# ----------------------------------------------------------------------
# 1. Install gcloud CLI: https://cloud.google.com/sdk/docs/install
# 2. Run: gcloud auth application-default login
# 3. No environment variable needed - it will auto-detect credentials

# Optional: Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_ga_measurement_id

# Optional: Feature Flags (set to "true" or "false")
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ML_PREDICTIONS=true

